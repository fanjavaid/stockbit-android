<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorLighterGray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <!--  Edit Text  -->
    <style name="Widget.Stockbit.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColorHint">@color/colorLightGray</item>
    </style>

    <!--  Button  -->
    <style name="Widget.Stockbit.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">52dp</item>
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.Stockbit.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">52dp</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="strokeColor">?attr/colorAccent</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Stockbit.DefaultOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/colorLightGray</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="strokeColor">@color/colorLighterGray</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--    -->
    <style name="TextAppearance.Stockbit.Hint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#0099ff</item>
    </style>
</resources>
